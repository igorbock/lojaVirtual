<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Loja Virtual</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        @Html.ActionLink("Loja Virtual", "ListaProdutos", "Vitrine", new { area = "" }, new { @class = "navbar-brand" })
    </div>

    <div class="row panel">
        <div id="categorias" class="col-xs-3">
            @Html.Action("Menu", "Categoria")
        </div>

        <div id="vitrine" class="col-xs-9">
            @RenderBody()
        </div>
    </div>

    <div class="container body-content">
        <footer>
            <p>&copy; @DateTime.Now.Year - Loja Virtual</p>
        </footer>
    </div>

</body>
</html>